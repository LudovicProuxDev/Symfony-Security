{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{ title }}</h1>
		<p>Surname:
			{{ app.user.surname }}</p>
		<p>Firstname:
			{{ app.user.firstname }}</p>
		<p>Firstname:
			{{ app.user.email }}</p>

	</div>
{% endblock %}
